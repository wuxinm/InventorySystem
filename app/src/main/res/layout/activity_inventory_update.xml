<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inventory_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.inventorysystem.activities.InventoryUpdate">

    <TextView
        android:text="@string/asset_info_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/activity_inventory_update"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/activity_inventory_update"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_asset_update_code"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/textView14"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView14" />

    <TextView
        android:text="@string/asset_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/textView14" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_asset_update_name"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/textView18"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView18" />

    <ListView
        android:layout_width="340dp"
        android:layout_height="209dp"
        android:id="@+id/listView_asset_update"
        app:layout_constraintLeft_toLeftOf="@+id/activity_inventory_update"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_inventory_update"
        android:layout_marginEnd="16dp" />

    <TextView
        android:text="@string/asset_info_starbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView24"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/activity_inventory_update"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/listView_asset_update"
        android:layout_marginTop="24dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:minHeight="30dp"
        app:layout_constraintLeft_toRightOf="@+id/textView24"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/listView_asset_update"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_inventory_update"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="384dp"
        android:layout_height="150dp"
        android:background="@color/bright_foreground_material_light"
        android:elevation="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_inventory_update"
        app:layout_constraintRight_toRightOf="@+id/activity_inventory_update"
        app:layout_constraintBottom_toBottomOf="@+id/activity_inventory_update">

        <TextView
            android:text="@string/asset_info_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            android:textColor="@android:color/black"
            android:paddingLeft="24dp"
            android:paddingBottom="0dp"
            android:paddingTop="10dp"
            android:background="@color/background_floating_material_light" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@color/background_floating_material_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@color/background_floating_material_light">

            <Button
                android:text="@string/dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_asset_update_cancel"
                android:layout_weight="1" />

            <Button
                android:text="@string/dialog_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_asset_update_confirm"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

