<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_asset_manual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.inventorysystem.activities.AssetManual">

    <TextView
        android:text="@string/asset_manual_title"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:textSize="20dp"
        android:padding="16dp"
        android:background="@color/colorPrimary"
        android:elevation="10dp"
        android:textColor="@color/background_material_light"
        android:id="@+id/textView_offline_asset_manual_title"
        app:layout_constraintLeft_toLeftOf="@+id/activity_asset_manual"
        app:layout_constraintTop_toTopOf="@+id/activity_asset_manual"
        app:layout_constraintRight_toRightOf="@+id/activity_asset_manual" />

    <TextView
        android:text="@string/asset_search_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView32"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        app:layout_constraintLeft_toLeftOf="@+id/activity_asset_manual"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_asset_manual_code"
        android:hint="输入资产编码"
        app:layout_constraintLeft_toRightOf="@+id/textView32"
        app:layout_constraintTop_toTopOf="@+id/textView32"
        app:layout_constraintRight_toRightOf="@+id/activity_asset_manual"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView32" />

    <TextView
        android:text="@string/asset_search_fincode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView34"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        app:layout_constraintLeft_toLeftOf="@+id/activity_asset_manual"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView32"
        android:layout_marginTop="48dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_asset_manual_fincode"
        android:hint="输入财务编码"
        app:layout_constraintLeft_toRightOf="@+id/textView34"
        app:layout_constraintTop_toTopOf="@+id/textView34"
        app:layout_constraintRight_toRightOf="@+id/activity_asset_manual"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView34" />

    <Button
        android:text="@string/dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_asset_manual_confirm"
        app:layout_constraintTop_toBottomOf="@+id/editText_asset_manual_fincode"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_asset_manual"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <Button
        android:text="@string/dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_asset_manual_cancel"
        app:layout_constraintTop_toTopOf="@+id/button_asset_manual_confirm"
        app:layout_constraintRight_toLeftOf="@+id/button_asset_manual_confirm"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:text="@string/asset_manual_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@color/contents_text"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_asset_manual"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/textView_offline_asset_manual_title"
        android:layout_marginTop="80dp" />
</android.support.constraint.ConstraintLayout>
